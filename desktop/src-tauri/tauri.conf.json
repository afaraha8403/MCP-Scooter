{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MCP Scooter",
  "version": "0.0.1",
  "identifier": "dev.afaraha8403.mcp-scooter",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "MCP Scooter",
        "width": 800,
        "height": 600,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/scooter"
    ],
    "resources": {
      "../../appdata/registry/official/*.json": "appdata/registry/official/",
      "../../appdata/clients/*.json": "appdata/clients/"
    },
    "publisher": "Balacode.io",
    "shortDescription": "Universal Operating System for the Model Context Protocol",
    "longDescription": "MCP Scooter is a lightweight, native desktop application that serves as the universal Operating System for the Model Context Protocol (MCP). It manages AI tool integrations through a registry system, providing dynamic discovery, profile isolation, and seamless client integrations.",
    "category": "DeveloperTool",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/mcp-scooter/scooter/releases/download/updater/latest.json"
      ],
      "pubkey": ""
    }
  }
}
